<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MovieDetailTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="Title" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#41637f</item>
    </style>
    <style name="ListButton">
        <item name="android:background">@color/udacity_color</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>
    <style name="CapstoneButton" parent="ListButton">
        <item name="android:background">@color/capstone_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
